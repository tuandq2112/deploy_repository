<head>
  <title>ADD BILL</title>
  <link
    rel="stylesheet"
    href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
  />
</head>

<body>
  <div class="container">
    <a href="/home"><h3>Home page</h3></a>
    <h2>ADD BILL</h2>

    <form action="/add-bill" method="POST">
      <label>ROOM NAME</label>
      <select id="roomName1" class="form-control" name="roomName1">
        <% rooms.forEach((entry) => { %>
          <option value="<%= entry.roomName %>" name="<%= entry.roomName %>">
            <%= entry.roomName %>
          </option>
          <% }) %>
      </select>

      <label>USER NAME</label>
      <select id="userName1" class="form-control" name="userName1">
        <% users.forEach((entry) => { %>
        <option value="<%= entry.userName %>" name="<%= entry.userName %>">
          <%= entry.userName %>
        </option>
        <% }) %>
      </select>

      <div class="form-group">
        <label>ELECTRICITY BILL</label>
        <input class="form-control" type="text" name="electric" />
      </div>
      <div class="form-group">
        <label>WATER BILL</label>
        <input class="form-control" type="text" name="Water_bill1" />
      </div>
      <div class="form-group">
        <label>ROOM BILL</label>
        <input class="form-control" type="text" name="Room_bill1" />
      </div>
      <div class="form-group">
        <label>TOTAL</label>
        <input class="form-control" type="text" name="total1" />
      </div>

     
      <label for="pay1">PAY</label>
      <select id="pay1" class="form-control" name="pay1">
        <option value="Paid">Paid</option>
        <option value="Unpaid">Unpaid</option>
      </select>
      <br />
      <input
        id="add-btn"
        class="btn btn-primary"
        type="submit"
        value="ADD BILL"
      />
    </form>
  </div>
</body>
